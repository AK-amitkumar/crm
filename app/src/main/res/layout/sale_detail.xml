<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_primary"
        android:minHeight="?attr/actionBarSize"
        app:titleMarginStart="@dimen/default_16dp"
        android:paddingTop="@dimen/statusBarHeight"
        android:paddingRight="@dimen/default_8dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:theme="@style/ToolBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <odoo.controls.OForm
            android:id="@+id/saleForm"
            android:orientation="vertical"
            app:controlIconTint="@color/theme_primary"
            app:modelName="sale.order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:id="@+id/fname"
                app:fieldName="name"
                app:showLabel="false"
                app:showIcon="false"
                app:fieldTextAppearance="?android:textAppearanceMedium"
                app:controlLabel="Define the sale"
                app:fieldTextSize="5sp"
                android:layout_height="wrap_content">

            </odoo.controls.OField>

            <View style="@style/ViewSeparator" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                app:fieldName="partner_id"
                app:showLabel="false"
                app:showIcon="false"
                app:fieldTextAppearance="?android:textAppearanceMedium"
                app:fieldTextSize="5sp"
                android:layout_height="wrap_content" />


            <odoo.controls.OField
                android:layout_width="match_parent"
                app:fieldName="date_order"
                app:showLabel="false"
                app:showIcon="false"
                app:fieldTextAppearance="?android:textAppearanceMedium"
                app:fieldTextSize="5sp"
                android:layout_height="wrap_content" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                app:fieldName="amount_total"
                app:showLabel="false"
                app:showIcon="false"
                app:fieldTextAppearance="?android:textAppearanceMedium"
                app:fieldTextSize="5sp"
                android:layout_height="wrap_content" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                app:fieldName="payment_term"
                app:showLabel="false"
                app:showIcon="false"
                app:fieldTextAppearance="?android:textAppearanceMedium"
                app:fieldTextSize="5sp"
                android:layout_height="wrap_content" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                app:fieldName="validity_date"
                app:showLabel="false"
                app:showIcon="false"
                app:fieldTextAppearance="?android:textAppearanceMedium"
                app:fieldTextSize="5sp"
                android:layout_height="wrap_content" />
