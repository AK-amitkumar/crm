            </odoo.controls.OField>

            <odoo.controls.OField
                android:layout_width="match_parent"
                app:fieldName="partner_id"
                app:fieldTextSize="5sp"
                app:widgetType="SearchableLive"
                android:layout_height="wrap_content">

            </odoo.controls.OField>

